#include "pch.h"
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int n,k;
	float x = 0;
	cout << "Введите размер массивов: ";
	cin >> n;
	cout << "Введите элементы массива А: ";
	int* a = new int[n];
	int* b = new int[n];
	for (int i = 0; i < n; i++) {
		cin >> a[i];
	}
	
	for (int i = 0; i < n; i++) {
		for (int j = 0; j <= i; j++) {
			x += a[j];
		}
		b[i] = x / (i + 1);
		x = 0;
	}

	cout << "A\tB" << endl;
	for (int i = 0; i < n; i++) {
		cout << a[i] << "\t" << b[i] << endl;
	}

	delete[]a;
	delete[]b;
}
